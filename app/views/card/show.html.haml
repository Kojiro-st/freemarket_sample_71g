= render 'layouts/notifications'
= render 'devise/header'
.card__show
  .card__show__main
    .card__show__main--title
      %p 支払い方法一覧
    .card__show__main--text
      %label 登録クレジットカード情報
      %br
      .card__show__main--number
        = "**** **** **** " + @default_card_information.last4
        %br
      .card__show__main--expiration
        - exp_month = @default_card_information.exp_month.to_s
        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
        = exp_month + " / " + exp_year
        = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
          %input{ type: "hidden", name: "card_id", value: "" }
          %button 削除する
      .card__show__main--mypage
        = link_to root_path class:"mypage__btn" do
          マイページへ戻る

= render 'devise/footer'