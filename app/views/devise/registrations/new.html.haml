.sign_in_row
  = render 'devise/header'
  .main
    .main__new
      .main__new__title
        %h2 会員情報登録
      .main__new__form
        .main__new__form__input
          = form_for(@user, url: user_registration_path) do |f|
            = render "devise/shared/error_messages", resource: @user
            .field
              = f.label :ニックネーム
              %span.form-require 必須
              %br/
              = f.text_field :nikname, autofocus: true, class: 'form-control', placeholder:"例）フリマ太郎"
            .field
              = f.label :メールアドレス
              %span.form-require 必須
              %br/
              = f.email_field :email, autofocus: true, class: 'form-control', placeholder:"例）PC・携帯どちらでも可"
            .field
              = f.label :パスワード
              %span.form-require 必須
              %br/
              = f.password_field :encrypted_password, autofocus: true, class: 'form-control', placeholder:"例）７文字以上半角英数字"
            .field
              .main__new__form__input
                %p ※ 英字と数字の両方を含めて設定してください
            .field
              %h1 本人確認 
              %h1 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。

            = f.fields_for :confirm do |i|
              .field_1
                = f.label :お名前（全角）
                %span.form-require 必須
                %br/
                .form-control_1
                  = i.text_field :name_last_name, class: 'form-control_1_2', placeholder:"例）佐藤"
                  = i.text_field :name_first_name, autofocus: true, class: 'form-control_1_2', placeholder:"例）孝二郎"
              .field_1
                = i.label :お名前カナ（全角）
                %span.form-require 必須
                %br/
                .form-control_1
                  = i.text_field :last_name_kana, autofocus: true, class: 'form-control_1_2', placeholder:"例）サトウ"
                  = i.text_field :first_name_kana, autofocus: true, class: 'form-control_1_2', placeholder:"例）コウジロウ"
                .field_1
                  %label{for:"birthday"} 生年月日
                  %span.form-require 必須
                  %br/
                  .form-control_1
                    .birth_date_field
                      = f.label :birth_date
                      = i.date_select(                  |
                        :birthday,                      |
                        start_year: 1930,               |
                        end_year: (Time.now.year - 18), |
                        default: Date.new(1989, 1, 1))  |

                  -#   .select-wrap.select-wrap__month
                  -#     %i.icon-arrow-bottom
                  -#     %select.select-default{name:"month"}
                  -#   %span 月
                  -#   .select-wrap.select-wrap__day
                  -#     %i.icon-arrow-bottom
                  -#     %select.select-default{name:"day"}
                  -#   %span 日
                  -# %input{:name => "birthday", :type => "hidden", :value => ""}/
                .clearfix
              
              .field
                %h1 ※ 本人情報は正しく入力してください。会員登録後、
                %h1 　修正するにはお時間を頂く場合があります。
              
              .field
              %p 「次へ進む」のボタンを押すことにより、利用規約に同意したものとみなします

              .field__next
                =link_to '#' ,class: 'field__next__text linkWhite' do
                  次へ進む
              
              .text.linkBlue
                %h 本人情報の登録について＞
     
            .field
              = f.submit "送信する", class: "formBox__submit"
  = render 'devise/footer'


    

    
